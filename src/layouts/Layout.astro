---
import "animate.css";
import NavigationBar from "@/components/navigation/NavigationBar.astro";
import FooterBar from "@/components/navigation/FooterBar.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrollador Web Full-Stack especializado en la creación de aplicaciones web, sitios web profesionales y tiendas en línea. Expertise en React, Astro, Ruby on Rails y Wordpress. Soluciones innovadoras y personalizadas para tu negocio en línea."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <NavigationBar />
    <slot />
    <FooterBar />
  </body>
</html>

<style is:global>
  @import url("https://fonts.cdnfonts.com/css/poppins");

  :root {
    --CL-background-primary: #222222;
    --CL-background-secondary: #161513;

    --CL-primary: #3a3eab;
    --CL-secondary: #2a299e;
  }

  /* width */
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: var(--CL-primary);
    border-radius: 10rem;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #000;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Poppins", sans-serif;
    background-color: var(--CL-background-secondary);
  }

  .bg-brand-blue {
    @apply bg-[var(--CL-primary)];
  }

  .bg-brand-gradient {
    @apply bg-gradient-to-tr from-[var(--CL-primary)] to-[var(--CL-secondary)];
  }

  .bg-background-primary {
    @apply bg-[var(--CL-background-primary)];
  }

  .text-brand-blue {
    @apply text-[var(--CL-primary)];
  }

  .btn {
    @apply font-normal;
  }

  .animated-background {
    background-size: 400%;

    -webkit-animation: animation 3s ease infinite;
    -moz-animation: animation 3s ease infinite;
    animation: animation 3s ease infinite;
  }

  @keyframes animation {
    0%,
    100% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }
  }
</style>
