---
import Resume from "@/assets/documents/John Palacios - Resume (Spanish).pdf";
import ResponsiveIllustration from "@/assets/images/brand/logo-dark.png";
import Experience_1 from "@/assets/images/experience/experience_1.png";
import Experience_2 from "@/assets/images/experience/experience_2.png";
import Experience_3 from "@/assets/images/experience/experience_3.png";
import Project_1 from "@/assets/images/projects/project_1.png";
import Project_2 from "@/assets/images/projects/project_2.png";
import Project_3 from "@/assets/images/projects/project_3.png";
import Project_4 from "@/assets/images/projects/project_4.png";
import ReactImage from "@/assets/images/technologies/react.svg";
import AstroImage from "@/assets/images/technologies/astro.svg";
import RailsImage from "@/assets/images/technologies/rails.svg";
import NodeJSImage from "@/assets/images/technologies/node.svg";
import Subtitle from "@/components/heading/Subtitle.astro";
import ExperienceCard from "@/components/ui/ExperienceCard.astro";
import PricingCard from "@/components/ui/PricingCard.astro";
import ProjectCard from "@/components/ui/ProjectCard.astro";
import TechnologyCard from "@/components/ui/TechnologyCard.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout
  title="Desarrollo Web Profesional en Ecuador | Sitios Web | RysthDesign"
>
  <section class="h-full p-4 lg:h-max">
    <article
      class="max-w-screen-xl py-12 pt-6 mx-auto space-y-8 md:space-y-10 h-max lg:py-28 md:py-24"
    >
      <Image
        src={ResponsiveIllustration}
        alt="Desarrollo Web Profesional"
        class="mx-auto rounded-full w-44 md:w-60 drop-shadow-2xl lg:h-full"
      />
      <main class="flex flex-col items-center justify-center gap-6 text-center">
        <h1
          class="text-2xl font-bold md:text-3xl lg:text-5xl lg:max-w-xl lg:!leading-[3.5rem] text-neutral-900"
        >
          Desarrollo Web <span class="text-[var(--CL-primary)]"
            >Profesional</span
          > en Ecuador
        </h1>
        <p
          class="max-w-xl mx-auto text-sm font-light leading-6 text-neutral-700 md:text-base"
        >
          Potencia tu negocio con <strong>
            sitios web profesionales, tiendas online y aplicaciones web
          </strong>. Soluciones digitales que mejoran la atención al cliente y
          optimizan procesos.
        </p>
        <div class="flex justify-around w-full mt-4 md:w-max md:gap-4">
          <a
            href="http://tinyurl.com/contact-ws"
            target="_blank"
            class="w-40 text-xs text-white border-transparent shadow-xl btn lg:text-sm btn-neutral bg-brand-gradient animated-background group hover:bg-white hover:opacity-80 shadow-indigo-900/25 btn-lg md:w-44"
          >
            Contactar
            <i class="bx bx-send"></i>
          </a>
          <a
            href={Resume}
            target="_blank"
            class="hidden w-40 text-xs text-white border shadow-xl border-neutral-400 md:w-44 btn lg:text-sm btn-ghost group hover:bg-white hover:text-neutral-900 shadow-neutral-400/25 btn-lg"
          >
            Descargar CV
            <i class="bx bx-download"></i>
          </a>
        </div>
      </main>
    </article>
  </section>
  <section class="p-4">
    <article class="max-w-screen-xl pb-12 mx-auto">
      <header class="mb-6 text-center md:mb-12">
        <h2
          class={`text-xl md:text-2xl font-bold uppercase text-[var(--CL-primary)]  tracking-wide md:tracking-widest`}
        >
          Stack Tecnológico
        </h2>
      </header>
      <main class="flex flex-wrap justify-center gap-4 md:gap-8">
        <TechnologyCard src={AstroImage} alt="Astro Logo" />
        <TechnologyCard src={ReactImage} alt="React Logo" />
        <TechnologyCard src={NodeJSImage} alt="NodeJS Logo" />
        <TechnologyCard
          src={RailsImage}
          alt="Rails Logo"
          customClass="md:w-full"
        />
      </main>
    </article>
  </section>
  <section
    class="p-4 bg-gradient-to-br animated-background bg-[#191919] my-10 md:my-20"
    id="proyectos"
  >
    <article class="relative max-w-screen-lg py-12 mx-auto md:py-24">
      <Subtitle
        title="Galería de Proyectos"
        description="Proyectos destacados utilizando mis habilidades y experiencia en desarrollo web full-stack."
        textColor="text-white"
        descriptionColor="!text-white/75"
      />
      <main
        class="left-0 right-0 grid w-full gap-4 my-12 lg:my-20 md:gap-8 md:grid-cols-2"
      >
        <ProjectCard
          imageUrl={Project_1}
          projectUrl="https://inventory.rysthdesign.com/"
          altText="QuickInventory Proyecto"
          title="QuickInventory"
          topic="Aplicación Web de Sistema de Inventario con Punto de Venta"
          description={`Es una aplicación web para la gestión de inventarios y punto de venta, desarrollado para tiendas pequeñas y medianas con control de stock y ventas.`}
          technologies={[
            { name: "Ruby on Rails", color: "bg-red-500" },
            { name: "TailwindCSS", color: "bg-cyan-600" },
            { name: "PostgreSQL", color: "bg-green-500" },
          ]}
        />
        <ProjectCard
          imageUrl={Project_2}
          projectUrl="https://react-tramitesec-uxbm.onrender.com/"
          altText="TrámitesEC Proyecto"
          title="TramitesEC"
          topic="Aplicación Web de Gestión de Trámites"
          description={`Es una aplicación web diseñada y desarrollada a medida bajo los requerimientos del negocio, gestiona clientes, tramitadores y solicitudes de trámites.`}
          technologies={[
            { name: "React", color: "bg-blue-500" },
            { name: "Ruby on Rails", color: "bg-red-500" },
            { name: "PostgreSQL", color: "bg-green-500" },
          ]}
        />
        <ProjectCard
          imageUrl={Project_3}
          projectUrl="https://rysth.github.io/Valorant-Conference-Page/"
          altText="Valorant Conference Proyecto"
          title="Valorant Conference"
          topic="Sitio Web de Conferencias de Valorant"
          description={`Es una página web de conferencias de Valorant desarrollada con HTML, CSS y JavaScript. Uno de mis primeros proyectos hecho desde cero.`}
          technologies={[
            { name: "HTML", color: "bg-orange-500" },
            { name: "CSS", color: "bg-blue-500" },
            { name: "JavaScript", color: "bg-yellow-500" },
          ]}
        />
        <ProjectCard
          imageUrl={Project_4}
          projectUrl="https://react-rysthcraft.onrender.com/"
          altText="RysthCraft Proyecto"
          title="RysthCraft"
          topic="Sitio Web de Portfolio de RysthCraft"
          description={`Es una página web que servía como un portfolio de mis proyectos de desarrollo. Cuenta con traducción de textos inglés a espaniol.`}
          technologies={[
            { name: "React", color: "bg-blue-500" },
            { name: "TailwindCSS", color: "bg-cyan-600" },
            { name: "Figma", color: "bg-purple-500" },
          ]}
        />
      </main>
    </article>
  </section>
  <section class="relative p-4" id="planes">
    <div class="max-w-screen-xl py-12 mx-auto space-y-12 md:py-14">
      <Subtitle
        title="Nuestros Servicios y Planes"
        textColor="text-neutral-900"
        description="Soluciones digitales que potencian tu presencia online y optimizan procesos para tu negocio."
        descriptionColor="text-neutral-600"
      />
      <div
        class="relative flex flex-col items-center justify-center space-x-4 space-y-12 md:flex-row lg:space-y-0"
      >
        {/* Plan Sitio Web Profesional */}
        <PricingCard
          title="Sitio Web Profesional"
          price="$397+"
          features={[
            "Diseño Web Responsivo",
            "Disponibilidad 24/7",
            "Certificado SSL",
            "Hasta 5 Páginas",
            "Formulario de Contacto",
            "Configuración Personalizada",
            "Optimización SEO Básica",
            "Enlace a Redes Sociales",
            "Soporte Técnico",
          ]}
          maintanceText="Mantenimiento y Optimización $0/mes"
          buttonText="Comenzar Ahora"
          highlight={true}
        />
        {/* Plan E-Commerce */}
        <PricingCard
          title="Plan E-Commerce"
          price="$597+"
          features={[
            "Gestor de Contenido",
            "Tienda en Línea",
            "Pedidos por WhatsApp",
            "Hasta 100 Productos",
            "Diseño Web Profesional",
            "Certificación SSL",
            "Dominio Gratuito por 1 Año",
            "Hosting Gratuito por 1 Año",
            "Optimizado para Móviles",
          ]}
          buttonText="Comenzar Ahora"
          maintanceText="Mantenimiento y Optimización $10/mes"
          highlight={false}
        />
        {/* Plan Aplicación Web */}
        <PricingCard
          title="Plan Aplicación Web"
          price="$1197+"
          features={[
            "Aplicación Web Moderna",
            "Base de Datos Segura",
            "Interfaz Personalizada",
            "Respaldo de Información",
            "Diseño Web Profesional",
            "Certificación SSL",
            "Dominio Gratuito por 1 Año",
            "Panel Administrativo",
            "Optimizado para Móviles",
          ]}
          buttonText="Comenzar Ahora"
          maintanceText="Mantenimiento y Optimización $90/mes"
          highlight={false}
        />
      </div>
    </div>
  </section>
  <section class="p-4" id="experiencia">
    <article class="max-w-screen-md py-12 mx-auto">
      <header class="mb-6 text-center md:mb-12">
        <h2
          class={`text-xl md:text-2xl font-bold uppercase text-[var(--CL-primary)] tracking-wide md:tracking-widest`}
        >
          Experiencia Profesional
        </h2>
      </header>
      <ul class="flex flex-col gap-8 md:gap-12 lg:gap-16">
        <li>
          <ExperienceCard
            imageUrl={Experience_3}
            altText="Novicompu - Desarrollador Backend"
            title="Desarrollador Backend en Novicompu"
            date="2025 Marzo - Presente"
            description={`Implementación, documentación y control de sistemas de gestión de bases de datos, desarrollo de APIs RESTful y servicios web para aplicaciones. Colaboración en proyectos de desarrollo de software.`}
          />
        </li>
        <li>
          <ExperienceCard
            imageUrl={Experience_2}
            altText="RysthDesign - Web Developer"
            title="Desarrollador Web en RysthDesign"
            date="2023 Noviembre - 2025 Marzo"
            description={`Desarrollo e implementación de soluciones web profesionales, incluyendo sitios web corporativos, tiendas online y aplicaciones web personalizadas para pequeños y medianos negocios.`}
          />
        </li>
        <li>
          <ExperienceCard
            imageUrl={Experience_1}
            altText="Cierpronti S.A."
            title="Analista de Sistemas en Cierpronti S.A."
            date="2024 Abril - 2024 Diciembre"
            description={`Desarrollo de soluciones de automatización y soporte IT para la mejora de procesos internos. Implementación de herramientas de análisis de datos e integración de tecnologías para optimizar flujos de trabajo en la organización.`}
          />
        </li>
      </ul>
    </article>
  </section>
  <hr class="hidden border-none md:block bg-none" />
</Layout>
