---
import ResponsiveIllustration from "@/assets/images/brand/logo-dark.png";
import Resume from "@/assets/documents/John Palacios - Resume (Spanish).pdf";
import Project_1 from "@/assets/images/projects/project_1.png";
import Project_2 from "@/assets/images/projects/project_2.png";
import Project_3 from "@/assets/images/projects/project_3.png";
import Project_4 from "@/assets/images/projects/project_4.png";
import Experience_1 from "@/assets/images/experience/experience_1.png";
import Experience_2 from "@/assets/images/experience/experience_2.svg";
import CSSImage from "@/assets/images/technologies/css.svg";
import HTMLImage from "@/assets/images/technologies/html.svg";
import JavaScriptImage from "@/assets/images/technologies/javascript.svg";
import RailsImage from "@/assets/images/technologies/rails.svg";
import ReactImage from "@/assets/images/technologies/react.svg";
import RubyImage from "@/assets/images/technologies/ruby.svg";
import Subtitle from "@/components/heading/Subtitle.astro";
import ProjectCard from "@/components/ui/ProjectCard.astro";
import TechnologyCard from "@/components/ui/TechnologyCard.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import ExperienceCard from "@/components/ui/ExperienceCard.astro";
---

<Layout
  title="RysthDesign | Diseño y Desarrollo de Sitios Web Profesionales | Aplicaciones Web | Tíendas en Línea | Páginas Web Guayaquil"
>
  <section class="h-full p-4 lg:h-max">
    <article
      class="max-w-screen-xl py-12 pt-6 mx-auto space-y-8 md:space-y-10 h-max lg:py-28 md:py-24"
    >
      <Image
        src={ResponsiveIllustration}
        alt="Responsive web application"
        class="mx-auto rounded-full w-44 md:w-60 drop-shadow-2xl lg:h-full"
      />
      <main class="flex flex-col items-center justify-center gap-6 text-center">
        <h2
          class="text-2xl font-bold md:text-3xl lg:text-5xl lg:max-w-3xl lg:!leading-[3.5rem] text-white"
        >
          Desarrollo de Aplicaciones <span class="text-[var(--CL-primary)]"
            >Web Profesionales</span
          >
        </h2>
        <p
          class="max-w-lg mx-auto text-sm font-light leading-6 text-gray-300 md:text-base"
        >
          Ingeniero en software y desarrollador web full-stack con 2+ años de
          experiencia, me dedico a diseñar y desarrollar aplicaciones web para
          pequeños negocios.
        </p>
        <div class="flex justify-around w-full mt-4 md:w-max md:gap-4">
          <a
            href="http://tinyurl.com/contact-ws"
            target="_blank"
            class="w-40 text-xs text-white border-transparent shadow-xl btn lg:text-sm btn-neutral bg-brand-gradient animated-background group hover:bg-white hover:opacity-80 shadow-indigo-900/25 btn-lg md:w-44"
          >
            Contactar
            <i class="bx bx-send"></i>
          </a>
          <a
            href={Resume}
            target="_blank"
            class="w-40 text-xs text-white border shadow-xl border-neutral-400 md:w-44 btn lg:text-sm btn-ghost group hover:bg-white hover:text-neutral-900 shadow-neutral-400/25 btn-lg"
          >
            Descargar CV
            <i class="bx bx-download"></i>
          </a>
        </div>
      </main>
    </article>
  </section>
  <section class="p-4">
    <article class="max-w-screen-xl pb-12 mx-auto">
      <header class="mb-6 text-center md:mb-12">
        <h2
          class={`text-xl md:text-2xl font-bold uppercase text-[var(--CL-tertiary)]  tracking-wide md:tracking-widest`}
        >
          Stack Tecnológico
        </h2>
      </header>
      <main class="flex flex-wrap justify-center gap-4 md:gap-8">
        <TechnologyCard src={HTMLImage} alt="HTML Logo" />
        <TechnologyCard src={CSSImage} alt="CSS Logo" />
        <TechnologyCard src={JavaScriptImage} alt="JavaScript Logo" />
        <TechnologyCard src={ReactImage} alt="React Logo" />
        <TechnologyCard src={RubyImage} alt="Ruby Logo" />
        <TechnologyCard
          src={RailsImage}
          alt="Rails Logo"
          customClass="md:w-full"
        />
      </main>
    </article>
  </section>
  <section
    class="p-4 bg-gradient-to-br animated-background bg-[#191919] my-10 md:my-20"
    id="proyectos"
  >
    <article class="relative max-w-screen-lg py-12 mx-auto md:py-24">
      <Subtitle
        title="Galería de Proyectos"
        description="Proyectos destacados utilizando mi habilidades y experiencia como desarrollador web full-stack."
        textColor="text-white"
        descriptionColor="!text-white/75"
      />
      <main
        class="left-0 right-0 grid w-full gap-4 my-12 lg:my-20 md:gap-8 md:grid-cols-2"
      >
        <ProjectCard
          imageUrl={Project_1}
          projectUrl="https://rails-storegem.onrender.com/"
          altText="StoreGem Proyecto"
          title="StoreGem"
          topic="Aplicación Web de Catálogo Online"
          description={`Es una aplicación web para la gestión de un catálogo de productos en línea
      de forma simple, enfocada principalmente para pequeños negocios.`}
          technologies={[
            { name: "Ruby on Rails", color: "bg-red-500" },
            { name: "TailwindCSS", color: "bg-cyan-500" },
            { name: "PostgreSQL", color: "bg-green-500" },
          ]}
        />
        <ProjectCard
          imageUrl={Project_2}
          projectUrl="https://react-tramitesec-uxbm.onrender.com/"
          altText="TrámitesEC Proyecto"
          title="TramitesEC"
          topic="Aplicación Web de Gestión de Trámites"
          description={`Es una aplicación web diseñada y desarrollada a medida bajo los requerimientos del negocio, gestiona clientes, tramitadores y solicitudes de trámites.`}
          technologies={[
            { name: "React", color: "bg-blue-500" },
            { name: "Ruby on Rails", color: "bg-red-500" },
            { name: "PostgreSQL", color: "bg-green-500" },
          ]}
        />
        <ProjectCard
          imageUrl={Project_3}
          projectUrl="https://rysth.github.io/Valorant-Conference-Page/"
          altText="Valorant Conference Proyecto"
          title="Valorant Conference"
          topic="Sitio Web de Conferencias de Valorant"
          description={`Es una página web de conferencias de Valorant desarrollada con HTML, CSS y JavaScript. Uno de mis primeros proyectos hecho desde cero.`}
          technologies={[
            { name: "HTML", color: "bg-orange-500" },
            { name: "CSS", color: "bg-blue-500" },
            { name: "JavaScript", color: "bg-yellow-500" },
          ]}
        />
        <ProjectCard
          imageUrl={Project_4}
          projectUrl="https://react-rysthcraft.onrender.com/"
          altText="RysthCraft Proyecto"
          title="RysthCraft"
          topic="Sitio Web de Portfolio de RysthCraft"
          description={`Es una página web que servía como un portfolio de mis proyectos de desarrollo. Cuenta con traducción de textos inglés a espaniol.`}
          technologies={[
            { name: "React", color: "bg-blue-500" },
            { name: "TailwindCSS", color: "bg-cyan-500" },
            { name: "Figma", color: "bg-purple-500" },
          ]}
        />
      </main>
    </article>
  </section>
  <section class="p-4" id="experiencia">
    <article class="max-w-screen-md pb-12 mx-auto">
      <header class="mb-6 text-center md:mb-12">
        <h2
          class={`text-xl md:text-2xl font-bold uppercase text-[var(--CL-tertiary)] tracking-wide md:tracking-widest`}
        >
          Experiencia Profesional
        </h2>
      </header>
      <ul class="flex flex-col gap-8 md:gap-12 lg:gap-16">
        <li>
          <ExperienceCard
            imageUrl={Experience_2}
            altText="RysthDesign - FullStack Developer"
            title="Desarrollador Web FullStack en RysthDesign"
            date="2023 Noviembre - Presente"
            description={`Marca personal en donde me desempeño como desarrollador web fullstack para la creación, diseño y desarrollo de aplicaciones web modernas usando React, TailwindCSS y Ruby on Rails para pequeños negocios.`}
          />
        </li>
        <li>
          <ExperienceCard
            imageUrl={Experience_1}
            altText="Cierpronti S.A."
            title="Analista de Sistemas en Cierpronti S.A."
            date="2024 Abril - 2024 Diciembre"
            description={` Desarrollo de actividades In-House por parte de Asvesot C.A. relacionadas
            al ámbito de sistemas como soporte IT para la solución de problemas
            informáticos del personal. Contribuyendo al flujo correcto de los procesos
            de la organización.`}
          />
        </li>
      
      </ul>
    </article>
  </section>
  <hr class="hidden border-none md:block bg-none" />
</Layout>
