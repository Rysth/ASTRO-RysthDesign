---
import Resume from "@/assets/documents/John Palacios - Resume (Spanish).pdf";
import ResponsiveIllustration from "@/assets/images/brand/hero.png";
import Experience_1 from "@/assets/images/experience/experience_1.png";
import Experience_2 from "@/assets/images/experience/experience_2.png";
import Experience_3 from "@/assets/images/experience/experience_3.png";
import Project_1 from "@/assets/images/projects/project_1.png";
import Project_2 from "@/assets/images/projects/project_2.png";
import ReactImage from "@/assets/images/technologies/react.svg";
import AstroImage from "@/assets/images/technologies/astro.svg";
import RailsImage from "@/assets/images/technologies/rails.svg";
import NodeJSImage from "@/assets/images/technologies/node.svg";
import PostgreSQLImage from "@/assets/images/technologies/postgresql.svg";
import DockerImage from "@/assets/images/technologies/docker.svg";
import Subtitle from "@/components/heading/Subtitle.astro";
import TechnologyCard from "@/components/ui/TechnologyCard.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import {
  FaArrowRight,
  FaCheckCircle,
  FaClock,
  FaDollarSign,
  FaRocket,
  FaStore,
  FaWhatsapp,
  FaCode,
  FaLaptopCode,
  FaShoppingCart,
} from "react-icons/fa";
---

<Layout
  title="Desarrollo Web Profesional | Sitios Web y E-commerce | RysthDesign"
>
  <!-- Hero Section - Nuevo enfoque en servicios de desarrollo -->
  <section
    class="relative min-h-screen p-4 pt-8 lg:pt-16 bg-gradient-to-br from-[#0a0a0a] via-[#100f1e] to-[#1a1a2e] overflow-hidden"
  >
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-30">
      <div
        class="absolute rounded-full top-20 left-10 w-72 h-72 bg-purple-500/20 blur-3xl"
      >
      </div>
      <div
        class="absolute rounded-full bottom-20 right-10 w-96 h-96 bg-blue-500/20 blur-3xl"
      >
      </div>
      <div
        class="absolute transform -translate-x-1/2 -translate-y-1/2 rounded-full top-1/2 left-1/2 w-80 h-80 bg-indigo-500/10 blur-3xl"
      >
      </div>
    </div>

    <article
      class="relative z-10 items-center max-w-screen-xl min-h-screen mx-auto md:grid md:grid-cols-2 md:gap-12"
    >
      <div class="flex flex-col justify-center space-y-6 md:space-y-8">
        <!-- Badge superior -->
        <div
          class="flex items-center gap-2 text-[#a78bfa] font-jetbrains text-sm uppercase tracking-wider"
        >
          <div class="w-2 h-2 bg-[#a78bfa] rounded-full animate-pulse"></div>
          <span>Tu Socio Digital</span>
        </div>

        <!-- Título principal -->
        <div class="space-y-4">
          <h1
            class="text-4xl font-black md:text-5xl lg:text-6xl lg:!leading-[4rem] text-white"
          >
            Tu
            <span class="relative">
              <span
                class="bg-gradient-to-r from-[#a78bfa] to-[#4361ee] bg-clip-text text-transparent"
              >
                Asistente Digital
              </span>
              <div
                class="absolute -inset-1 bg-gradient-to-r from-[#a78bfa] to-[#4361ee] rounded-lg blur opacity-30 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"
              >
              </div>
            </span>
            Potenciado por IA
          </h1>

          <p class="max-w-xl text-lg leading-relaxed text-gray-300">
            Libera tu potencial creativo. Genera, personaliza y perfecciona sin
            esfuerzo tus diseños con tecnología de IA de vanguardia.
          </p>
        </div>

        <!-- Botones CTA -->
        <div class="flex flex-wrap gap-4">
          <a
            href="#servicios"
            class="flex items-center gap-3 px-8 py-4 text-white bg-gradient-to-r from-[#a78bfa] to-[#4361ee] rounded-full shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 font-semibold"
          >
            Comenzar Ahora
            <FaArrowRight className="text-sm" />
          </a>

          <a
            href="#portfolio"
            class="px-8 py-4 text-[#a78bfa] border-2 border-[#a78bfa]/50 rounded-full hover:bg-[#a78bfa]/10 transition-all duration-300 font-semibold backdrop-blur-sm"
          >
            Ver Portfolio
          </a>
        </div>

        <!-- Características destacadas -->
        <div class="pt-6 space-y-4">
          <div class="flex items-center gap-3 text-gray-300">
            <div
              class="flex items-center justify-center w-8 h-8 rounded-full bg-[#a78bfa]/20"
            >
              <FaCheckCircle className="text-[#a78bfa] text-sm" />
            </div>
            <span class="text-sm">Diseños web modernos y responsivos</span>
          </div>

          <div class="flex items-center gap-3 text-gray-300">
            <div
              class="flex items-center justify-center w-8 h-8 rounded-full bg-[#a78bfa]/20"
            >
              <FaCheckCircle className="text-[#a78bfa] text-sm" />
            </div>
            <span class="text-sm"
              >E-commerce que convierte visitantes en ventas</span
            >
          </div>

          <div class="flex items-center gap-3 text-gray-300">
            <div
              class="flex items-center justify-center w-8 h-8 rounded-full bg-[#a78bfa]/20"
            >
              <FaCheckCircle className="text-[#a78bfa] text-sm" />
            </div>
            <span class="text-sm">Aplicaciones web escalables y seguras</span>
          </div>
        </div>

        <!-- Social proof -->
        <div class="flex items-center gap-4 pt-4">
          <div class="flex -space-x-3">
            <div
              class="w-8 h-8 bg-gradient-to-r from-[#a78bfa] to-[#4361ee] rounded-full border-2 border-[#100f1e]"
            >
            </div>
            <div
              class="w-8 h-8 bg-gradient-to-r from-[#4361ee] to-[#6366f1] rounded-full border-2 border-[#100f1e]"
            >
            </div>
            <div
              class="w-8 h-8 bg-gradient-to-r from-[#6366f1] to-[#8b5cf6] rounded-full border-2 border-[#100f1e]"
            >
            </div>
            <div
              class="w-8 h-8 bg-gradient-to-r from-[#8b5cf6] to-[#a78bfa] rounded-full border-2 border-[#100f1e]"
            >
            </div>
          </div>
          <div class="text-sm text-gray-400">
            <span class="font-semibold text-white">+50 proyectos</span> exitosos
            entregados
          </div>
        </div>
      </div>

      <!-- Lado derecho - Elemento visual moderno -->
      <div class="relative flex items-center justify-center mt-8 md:mt-0">
        <!-- Círculo principal con gradiente -->
        <div class="relative w-80 h-80 md:w-96 md:h-96">
          <!-- Círculo exterior con animación -->
          <div
            class="absolute inset-0 rounded-full bg-gradient-to-r from-[#a78bfa] via-[#4361ee] to-[#6366f1] opacity-20 animate-spin-slow"
          >
          </div>

          <!-- Círculo medio -->
          <div
            class="absolute inset-4 rounded-full bg-gradient-to-r from-[#4361ee] to-[#a78bfa] opacity-30 animate-pulse"
          >
          </div>

          <!-- Círculo interior -->
          <div
            class="absolute inset-8 rounded-full bg-gradient-to-br from-[#1a1a2e] to-[#2d2d44] backdrop-blur-xl border border-[#a78bfa]/30 flex items-center justify-center"
          >
            <!-- Icono central -->
            <div class="text-6xl text-[#a78bfa] animate-pulse">
              <FaLaptopCode />
            </div>
          </div>

          <!-- Elementos flotantes -->
          <div
            class="absolute -top-4 -right-4 w-16 h-16 bg-[#a78bfa]/20 rounded-full flex items-center justify-center backdrop-blur-sm border border-[#a78bfa]/30 animate-bounce"
          >
            <FaCode className="text-[#a78bfa] text-xl" />
          </div>

          <div
            class="absolute -bottom-4 -left-4 w-16 h-16 bg-[#4361ee]/20 rounded-full flex items-center justify-center backdrop-blur-sm border border-[#4361ee]/30 animate-bounce"
            style="animation-delay: 1s;"
          >
            <FaShoppingCart className="text-[#4361ee] text-xl" />
          </div>

          <div
            class="absolute top-1/2 -left-8 w-12 h-12 bg-[#6366f1]/20 rounded-full flex items-center justify-center backdrop-blur-sm border border-[#6366f1]/30 animate-bounce"
            style="animation-delay: 2s;"
          >
            <FaRocket className="text-[#6366f1] text-lg" />
          </div>
        </div>

        <!-- Logos flotantes de tecnologías -->
        <div class="absolute space-y-4 top-4 right-4">
          <div
            class="flex items-center justify-center w-12 h-12 border rounded-lg bg-white/10 backdrop-blur-sm border-white/20"
          >
            <span class="text-xs font-bold text-white">React</span>
          </div>
          <div
            class="flex items-center justify-center w-12 h-12 border rounded-lg bg-white/10 backdrop-blur-sm border-white/20"
          >
            <span class="text-xs font-bold text-white">Node</span>
          </div>
        </div>

        <div class="absolute space-y-4 bottom-4 left-4">
          <div
            class="flex items-center justify-center w-12 h-12 border rounded-lg bg-white/10 backdrop-blur-sm border-white/20"
          >
            <span class="text-xs font-bold text-white">Rails</span>
          </div>
          <div
            class="flex items-center justify-center w-12 h-12 border rounded-lg bg-white/10 backdrop-blur-sm border-white/20"
          >
            <span class="text-xs font-bold text-white">SQL</span>
          </div>
        </div>
      </div>
    </article>
  </section>

  <!-- Systems Available Section - FIXED card structure -->
  <section class="p-4 py-16 bg-[#111]" id="aplicaciones">
    <article class="max-w-screen-xl mx-auto">
      <Subtitle
        title="Sistemas Web Listos Para Tu Negocio"
        description="Soluciones digitales que automatizan y optimizan las operaciones de tu empresa."
        textColor="text-white"
        descriptionColor="text-gray-300"
      />

      <div class="grid gap-8 mt-12 md:grid-cols-3">
        <!-- MicroPets - Available Now (Violet) -->
        <div
          class="relative p-8 transition-all duration-300 bg-gradient-to-br from-[#1a1a2e] to-[#2d2d44] rounded-2xl shadow-xl hover:shadow-2xl hover:scale-105 border-2 border-[#8b5cf6]"
        >
          <div class="absolute top-4 right-4">
            <span
              class="px-3 py-1 text-xs font-bold text-white bg-[#8b5cf6] rounded-full"
              >DISPONIBLE</span
            >
          </div>

          <div class="mb-6">
            <div
              class="flex items-center justify-center w-16 h-16 mb-4 rounded-xl bg-[#8b5cf6]/30"
            >
              <svg
                class="w-8 h-8 text-[#a78bfa]"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M4.5 3c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2M8 16c0 1.1.9 2 2 2s2-.9 2-2-.9-2-2-2-2 .9-2 2M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-2xl font-bold text-white">MicroPets</h3>
            <p class="mb-3 text-sm text-gray-400">
              Sistema completo para veterinarias
            </p>
            <div class="text-[#a78bfa] text-2xl font-bold mb-3">
              $25<span class="text-sm text-gray-400">/mes</span>
            </div>
            <div class="space-y-1 text-xs text-gray-400">
              <div class="flex items-center gap-2">
                <FaCheckCircle className="text-[#51cf66]" />
                <span>Historial médico</span>
              </div>
              <div class="flex items-center gap-2">
                <FaCheckCircle className="text-[#51cf66]" />
                <span>Agenda de citas</span>
              </div>
            </div>
          </div>

          <!-- MicroShop Card -->
          <div
            class="p-6 transition-all duration-300 bg-gradient-to-br from-[#1a1a2e] to-[#2d2d44] rounded-xl shadow-lg hover:shadow-xl hover:scale-105 border border-gray-600/30"
          >
            <div
              class="flex items-center justify-center w-12 h-12 mb-4 rounded-lg bg-green-500/20"
            >
              <svg
                class="w-6 h-6 text-green-400"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M19 6h-2c0-2.76-2.24-5-5-5S7 3.24 7 6H5c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-7-3c1.66 0 3 1.34 3 3H9c0-1.66 1.34-3 3-3zm0 10c-2.76 0-5-2.24-5-5h2c0 1.66 1.34 3 3 3s3-1.34 3-3h2c0 2.76-2.24 5-5 5z"
                ></path>
              </svg>
            </div>
            <h3 class="mb-2 text-lg font-bold text-white">MicroShop</h3>
            <p class="mb-3 text-sm text-gray-400">
              Catálogo de productos para WhatsApp
            </p>
            <div class="mb-3 text-2xl font-bold text-green-400">
              $25<span class="text-sm text-gray-400">/mes</span>
            </div>
            <div class="space-y-1 text-xs text-gray-400">
              <div class="flex items-center gap-2">
                <FaCheckCircle className="text-[#51cf66]" />
                <span>Catálogo digital</span>
              </div>
              <div class="flex items-center gap-2">
                <FaCheckCircle className="text-[#51cf66]" />
                <span>Ventas por WhatsApp</span>
              </div>
            </div>
          </div>

          <!-- Placeholder Card 2 - Full width -->
          <div
            class="p-6 transition-all duration-300 bg-gradient-to-br from-[#1a1a2e] to-[#2d2d44] rounded-xl shadow-lg hover:shadow-xl hover:scale-105 border border-gray-600/30 sm:col-span-2"
          >
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div
                  class="flex items-center justify-center w-12 h-12 rounded-lg bg-purple-500/20"
                >
                  <svg
                    class="w-6 h-6 text-purple-400"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold text-white">
                    Sistema Personalizado
                  </h3>
                  <p class="text-sm text-gray-400">
                    Desarrollamos tu sistema ideal
                  </p>
                </div>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-purple-400">
                  Consulta<span class="text-sm text-gray-400"> gratis</span>
                </div>
                <span
                  class="px-2 py-1 text-xs text-gray-400 bg-gray-700 rounded-full"
                  >Disponible</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </section>

  <!-- Ventajas Competitivas Section - Updated to blue -->
  <section class="p-4 py-16 bg-[#111]">
    <article class="max-w-screen-xl mx-auto">
      <Subtitle
        title="¿Por Qué Trabajar Conmigo?"
        description="Me especializo en hacer que la tecnología trabaje PARA tu negocio, no al revés."
        textColor="text-white"
        descriptionColor="text-gray-300"
      />

      <div class="grid max-w-screen-lg gap-4 mx-auto mt-12 md:grid-cols-3">
        <!-- Ventaja 1: Experiencia Comprobada -->
        <div
          class="p-6 transition-shadow bg-[#1a1a1a] border-t-4 rounded-lg shadow-md border-t-[#4361ee] hover:shadow-xl"
        >
          <div
            class="flex items-center justify-center w-16 h-16 mb-5 rounded-full bg-[#4361ee]/20"
          >
            <FaCheckCircle className="text-[#4361ee] text-2xl" />
          </div>
          <h3 class="mb-3 text-xl font-bold text-white">
            Lo Hago Simple Para Ti
          </h3>
          <p class="text-gray-300">
            Traduzco tecnología compleja a soluciones prácticas. Mis sistemas
            llevan años funcionando sin interrupciones porque están diseñados
            pensando en tu negocio.
          </p>
        </div>

        <!-- Ventaja 2: Soluciones Personalizadas -->
        <div
          class="p-6 transition-shadow bg-[#1a1a1a] border-t-4 rounded-lg shadow-md border-t-[#4361ee] hover:shadow-xl"
        >
          <div
            class="flex items-center justify-center w-16 h-16 mb-5 rounded-full bg-[#4361ee]/20"
          >
            <FaCheckCircle className="text-[#4361ee] text-2xl" />
          </div>
          <h3 class="mb-3 text-xl font-bold text-white">
            Tu Negocio, Tus Reglas
          </h3>
          <p class="text-gray-300">
            No necesitas adaptarte al software, yo adapto el software a tu forma
            de trabajar. Creo soluciones que encajan perfectamente en tus
            procesos actuales.
          </p>
        </div>

        <!-- Ventaja 3: Soporte Continuo -->
        <div
          class="p-6 transition-shadow bg-[#1a1a1a] border-t-4 rounded-lg shadow-md border-t-[#4361ee] hover:shadow-xl"
        >
          <div
            class="flex items-center justify-center w-16 h-16 mb-5 rounded-full bg-[#4361ee]/20"
          >
            <FaCheckCircle className="text-[#4361ee] text-2xl" />
          </div>
          <h3 class="mb-3 text-xl font-bold text-white">Estaré Ahí Siempre</h3>
          <p class="text-gray-300">
            No desaparezco después de entregar el proyecto. Ofrezco soporte
            continuo, actualizaciones y estoy disponible cuando me necesites. Tu
            éxito es mi éxito.
          </p>
        </div>
      </div>
    </article>
  </section>

  <!-- Stack Tecnológico Section -->
  <section class="p-4 py-16 bg-[#0a0a0a]" id="tecnologias">
    <article class="max-w-screen-xl mx-auto">
      <Subtitle
        title="Herramientas que Uso"
        description="Tecnologías probadas y confiables para crear soluciones duraderas"
        textColor="text-white"
        descriptionColor="text-gray-300"
      />
      <div
        class="grid grid-cols-3 gap-4 mt-10 lg:mx-auto lg:max-w-screen-md md:grid-cols-6 md:gap-8 place-items-center"
      >
        <TechnologyCard src={RailsImage} alt="Ruby on Rails Logo" />
        <TechnologyCard src={ReactImage} alt="React Logo" />
        <TechnologyCard src={PostgreSQLImage} alt="PostgreSQL Logo" />
        <TechnologyCard src={DockerImage} alt="Docker Logo" />
        <TechnologyCard src={AstroImage} alt="Astro Logo" />
        <TechnologyCard src={NodeJSImage} alt="NodeJS Logo" />
      </div>
    </article>
  </section>

  <!-- Proyectos Destacados -->
  <section class="p-4 py-16 bg-[#111]" id="proyectos">
    <article class="max-w-screen-xl mx-auto">
      <Subtitle
        title="Proyectos Reales en Acción"
        description="Sistemas que están ayudando a emprendedores como tú a crecer"
        textColor="text-white"
        descriptionColor="text-gray-300"
      />

      <div class="grid gap-8 mt-12 md:grid-cols-2">
        <!-- QuickInventory -->
        <div
          class="overflow-hidden transition bg-[#1a1a1a] rounded-lg shadow-md hover:shadow-xl"
        >
          <Image
            src={Project_1}
            alt="QuickInventory Sistema de Inventario"
            class="object-cover w-full h-96"
          />
          <div class="p-6">
            <h3 class="mb-2 text-2xl font-bold text-white">QuickInventory</h3>
            <p class="mb-3 text-sm text-gray-400">
              Sistema de Inventario y Punto de Venta
            </p>
            <p class="mb-6 text-gray-300">
              Sistema completo para gestión de inventarios y ventas, ideal para
              pequeños comercios. Incluye control de stock, reportes, y punto de
              venta POS.
            </p>
            <div class="flex gap-2 mb-5">
              <span class="text-white badge badge-sm bg-[#4361ee]"
                >Ruby on Rails</span
              >
              <span class="text-white badge badge-sm bg-cyan-600"
                >TailwindCSS</span
              >
              <span class="text-white bg-green-700 badge badge-sm"
                >PostgreSQL</span
              >
              <span class="text-white bg-blue-700 badge badge-sm">Docker</span>
            </div>
            <div class="flex gap-3">
              <button
                class="text-[#4361ee] border-[#4361ee] hover:bg-[#4361ee] hover:text-white btn btn-sm btn-outline"
                onclick="modal_quickinventory.showModal()">Ver Detalles</button
              >
              <a
                href="https://inventory.rysthdesign.com/"
                target="_blank"
                class="text-white btn btn-sm btn-neutral bg-[#4361ee] hidden"
                >Visitar Demo</a
              >
            </div>
          </div>
        </div>

        <!-- TrámitesEC -->
        <div
          class="overflow-hidden transition bg-[#1a1a1a] rounded-lg shadow-md hover:shadow-xl"
        >
          <Image
            src={Project_2}
            alt="TrámitesEC Gestión de Trámites"
            class="object-cover w-full h-96"
          />
          <div class="p-6">
            <h3 class="mb-2 text-2xl font-bold text-white">TrámitesEC</h3>
            <p class="mb-3 text-sm text-gray-400">
              Sistema de Gestión de Trámites
            </p>
            <p class="mb-6 text-gray-300">
              Plataforma diseñada para la gestión integral de trámites y
              clientes. Utilizada por 2+ años por una empresa de gestión de
              trámites ciudadanos.
            </p>
            <div class="flex gap-2 mb-5">
              <span class="text-white bg-blue-700 badge badge-sm">React</span>
              <span class="text-white badge badge-sm bg-[#4361ee]"
                >Ruby on Rails</span
              >
              <span class="text-white bg-green-700 badge badge-sm"
                >PostgreSQL</span
              >
            </div>
            <div class="flex gap-3">
              <button
                class="text-[#4361ee] border-[#4361ee] hover:bg-[#4361ee] hover:text-white btn btn-sm btn-outline"
                onclick="modal_tramites.showModal()">Ver Detalles</button
              >
              <a
                href="https://react-tramitesec-uxbm.onrender.com/"
                target="_blank"
                class="text-white btn btn-sm btn-neutral bg-[#4361ee] hidden"
                >Visitar Demo</a
              >
            </div>
          </div>
        </div>
      </div>
    </article>
  </section>

  <!-- Modales para los proyectos - Adaptados para fondo oscuro -->
  <dialog id="modal_quickinventory" class="modal modal-bottom sm:modal-middle">
    <div class="modal-box bg-[#1a1a1a] text-white">
      <h3 class="text-lg font-bold">
        QuickInventory - Sistema de Inventario y POS
      </h3>
      <div class="py-4">
        <p class="mb-3">
          Sistema completo para la gestión de inventarios y punto de venta,
          diseñado específicamente para pequeños y medianos comercios.
        </p>
        <h4 class="mb-2 font-semibold">Características principales:</h4>
        <ul class="pl-5 mb-4 space-y-1 text-gray-300 list-disc">
