---
import ResponsiveIllustration from "@/assets/images/brand/logo-dark.png";
import ProjectOne from "@/assets/images/projects/project_1.png";
import ProjectTwo from "@/assets/images/projects/project_2.png";
import CSSImage from "@/assets/images/technologies/css.svg";
import HTMLImage from "@/assets/images/technologies/html.svg";
import JavaScriptImage from "@/assets/images/technologies/javascript.svg";
import RailsImage from "@/assets/images/technologies/rails.svg";
import ReactImage from "@/assets/images/technologies/react.svg";
import RubyImage from "@/assets/images/technologies/ruby.svg";
import Subtitle from "@/components/heading/Subtitle.astro";
import ProjectCard from "@/components/ui/ProjectCard.astro";
import TechnologyCard from "@/components/ui/TechnologyCard.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout
  title="RysthDesign | Diseño y Desarrollo de Sitios Web Profesionales | Aplicaciones Web | Tíendas en Línea | Páginas Web Guayaquil"
>
  <section class="h-full p-4 lg:h-max">
    <article
      class="max-w-screen-xl py-12 pt-6 mx-auto space-y-8 md:space-y-10 h-max lg:py-28 md:py-24"
    >
      <Image
        src={ResponsiveIllustration}
        alt="Responsive web application"
        class="mx-auto rounded-full w-44 md:w-60 drop-shadow-2xl lg:h-full"
      />
      <main class="flex flex-col items-center justify-center gap-6 text-center">
        <h2
          class="text-2xl font-bold md:text-3xl lg:text-5xl lg:max-w-3xl lg:!leading-[3.5rem] text-white"
        >
          Desarrollo de Aplicaciones Web Profesionales
        </h2>
        <p
          class="max-w-lg mx-auto text-sm font-light leading-6 text-neutral-300 md:text-base"
        >
          Ingeniero en software y desarrollador web full-stack con 2+ años de
          experiencia, me dedico a diseñar y desarrollar aplicaciones web para
          pequeños negocios.
        </p>
        <div class="flex justify-between w-full mt-4 md:w-max md:gap-4">
          <a
            href="http://tinyurl.com/contact-ws"
            target="_blank"
            class="w-40 text-xs text-white border-transparent shadow-xl btn lg:text-sm btn-neutral bg-brand-blue group hover:bg-white hover:text-neutral-900 shadow-indigo-900/25 btn-lg md:w-44"
          >
            Contactar
            <i class="bx bx-send"></i>
          </a>
          <a
            href="/servicios"
            class="w-40 text-xs text-white border border-white shadow-xl md:w-44 btn lg:text-sm btn-ghost group hover:bg-white hover:text-neutral-900 shadow-neutral-400/25 btn-lg"
          >
            Descargar CV
            <i class="bx bx-download"></i>
          </a>
        </div>
      </main>
    </article>
  </section>
  <section class="p-4">
    <article class="max-w-screen-xl pb-12 mx-auto">
      <header class="mb-6 text-center md:mb-12">
        <h2 class={`text-2xl font-bold uppercase tracking-widest`}>
          Experiencia Con
        </h2>
      </header>
      <main class="flex flex-wrap justify-center gap-4 md:gap-8">
        <TechnologyCard src={HTMLImage} alt="HTML Logo" />
        <TechnologyCard src={CSSImage} alt="CSS Logo" />
        <TechnologyCard src={JavaScriptImage} alt="JavaScript Logo" />
        <TechnologyCard src={ReactImage} alt="React Logo" />
        <TechnologyCard src={RubyImage} alt="Ruby Logo" />
        <TechnologyCard
          src={RailsImage}
          alt="Rails Logo"
          customClass="md:w-full"
        />
      </main>
    </article>
  </section>
  <section
    class="p-4 bg-gradient-to-br animated-background bg-[#191919] md:mt-20"
  >
    <article class="relative max-w-screen-xl py-12 mx-auto md:py-24">
      <Subtitle
        title="Galería de Proyectos"
        description="Realizamos proyectos de alta calidad y gran alcance, para asegurar el éxito de tu negocio."
        textColor="text-white"
        descriptionColor="!text-white/75"
      />
      <main
        class="left-0 right-0 grid w-full gap-4 my-12 lg:my-24 md:gap-8 sm:grid-cols-2"
      >
        <ProjectCard
          imageUrl={ProjectOne}
          projectUrl="https://rails-storegem.onrender.com/"
          altText="StoreGem Proyecto"
        />
        <ProjectCard
          imageUrl={ProjectTwo}
          projectUrl="https://react-tramitesec-uxbm.onrender.com/"
          altText="TrámitesEC Proyecto"
        />
      </main>
    </article>
  </section>
  <hr class="hidden border-none md:block bg-none" />
</Layout>
