---
import Resume from "@/assets/documents/John Palacios - Resume (Spanish).pdf";
import ResponsiveIllustration from "@/assets/images/brand/hero.png";
import Experience_1 from "@/assets/images/experience/experience_1.png";
import Experience_2 from "@/assets/images/experience/experience_2.png";
import Experience_3 from "@/assets/images/experience/experience_3.png";
import Project_1 from "@/assets/images/projects/project_1.png";
import Project_2 from "@/assets/images/projects/project_2.png";
import Subtitle from "@/components/heading/Subtitle.astro";
import HeroSection from "@/components/sections/HeroSection.astro";
import CompetitiveAdvantagesSection from "@/components/sections/CompetitiveAdvantagesSection.astro";
import ClientsSection from "@/components/sections/ClientsSection.astro";
import TechnologySection from "@/sections/general/TechnologySection.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import {
  FaCheckCircle,
  FaClock,
  FaDollarSign,
  FaWhatsapp,
} from "react-icons/fa";
---

<Layout
  title="Desarrollo Web Profesional | Sitios Web y E-commerce | RysthDesign Guayaquil"
>
  <!-- Hero Section -->
  <HeroSection />

  <!-- Technology Stack Section -->
  <TechnologySection />

  <!-- Nueva Sección de Ventajas Competitivas -->
  <CompetitiveAdvantagesSection />

  <!-- Nueva Sección de Clientes -->
  <ClientsSection />

  <!-- Modales para los proyectos - Adaptados para fondo oscuro -->
  <dialog id="modal_quickinventory" class="modal modal-bottom sm:modal-middle">
    <div class="modal-box bg-[#1a1a1a] text-white">
      <h3 class="text-lg font-bold">
        QuickInventory - Sistema de Inventario y POS
      </h3>
      <div class="py-4">
        <p class="mb-3">
          Sistema completo para la gestión de inventarios y punto de venta,
          diseñado específicamente para pequeños y medianos comercios.
        </p>
        <h4 class="mb-2 font-semibold">Características principales:</h4>
        <ul class="pl-5 mb-4 space-y-1 text-gray-300 list-disc">
          <li>Control de inventario en tiempo real</li>
          <li>Gestión de proveedores y compras</li>
          <li>Sistema POS con interfaz táctil intuitiva</li>
          <li>Reportes de ventas e inventario</li>
          <li>Gestión de usuarios y permisos</li>
          <li>Alertas de stock bajo</li>
        </ul>
        <h4 class="mb-2 font-semibold">Tecnologías utilizadas:</h4>
        <div class="flex flex-wrap gap-2 mb-4">
          <span class="text-white bg-red-500 badge badge-sm">Ruby on Rails</span
          >
          <span class="text-white badge badge-sm bg-cyan-600">TailwindCSS</span>
          <span class="text-white bg-green-500 badge badge-sm">PostgreSQL</span>
          <span class="text-white bg-blue-500 badge badge-sm">Docker</span>
          <span class="text-white bg-purple-500 badge badge-sm">Hotwire</span>
        </div>
        <h4 class="mb-2 font-semibold">Resultados del cliente:</h4>
        <p class="text-gray-300">
          El cliente experimentó una reducción del 35% en pérdidas de inventario
          y un aumento del 20% en eficiencia operativa tras 6 meses de uso.
        </p>
      </div>
      <div class="modal-action">
        <form method="dialog">
          <button class="bg-[#4361ee] text-white hover:bg-opacity-90 btn"
            >Cerrar</button
          >
        </form>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>cerrar</button>
    </form>
  </dialog>

  <dialog id="modal_tramites" class="modal modal-bottom sm:modal-middle">
    <div class="modal-box bg-[#1a1a1a] text-white">
      <h3 class="text-lg font-bold">
        TrámitesEC - Sistema de Gestión de Trámites
      </h3>
      <div class="py-4">
        <p class="mb-3">
          Aplicación web completa para la gestión de trámites gubernamentales,
          clientes y pagos, en uso continuo por más de 2 años por una empresa de
          gestión documental.
        </p>
        <h4 class="mb-2 font-semibold">Características principales:</h4>
        <ul class="pl-5 mb-4 space-y-1 text-gray-300 list-disc">
          <li>Gestión de clientes y seguimiento de trámites</li>
          <li>Panel de administración para tramitadores</li>
          <li>Sistema de notificaciones por email y WhatsApp</li>
          <li>Generación de documentos personalizados</li>
          <li>Reportes financieros y operativos</li>
          <li>Interfaz responsive para acceso móvil</li>
        </ul>
        <h4 class="mb-2 font-semibold">Tecnologías utilizadas:</h4>
        <div class="flex flex-wrap gap-2 mb-4">
          <span class="text-white bg-blue-500 badge badge-sm">React</span>
          <span class="text-white bg-red-500 badge badge-sm">Ruby on Rails</span
          >
          <span class="text-white bg-green-500 badge badge-sm">PostgreSQL</span>
          <span class="text-white bg-yellow-500 badge badge-sm">Redux</span>
          <span class="text-white bg-purple-500 badge badge-sm">AWS S3</span>
        </div>
        <h4 class="mb-2 font-semibold">Resultados del cliente:</h4>
        <p class="text-gray-300">
          TrámitesEC ha permitido a la empresa aumentar su capacidad de
          procesamiento en un 70%, reducir errores en documentación y mejorar la
          satisfacción de sus clientes.
        </p>
      </div>
      <div class="modal-action">
        <form method="dialog">
          <button class="bg-[#4361ee] text-white hover:bg-opacity-90 btn"
            >Cerrar</button
          >
        </form>
      </div>
    </div>

    <form method="dialog" class="modal-backdrop">
      <button>cerrar</button>
    </form>
  </dialog>
  <!-- Call to Action Section - New section replacing the broken cards -->
  <section
    class="p-4 py-16 bg-gradient-to-br from-[#4361ee] to-[#3651cc]"
    id="contacto"
  >
    <article class="max-w-screen-xl mx-auto text-center">
      <div class="max-w-3xl mx-auto space-y-8">
        <!-- Main CTA Content -->
        <div class="space-y-6">
          <h2 class="text-4xl font-black text-white md:text-5xl lg:text-6xl">
            ¿Listo para Digitalizar tu Negocio?
          </h2>
          <p class="text-xl leading-relaxed text-blue-100 md:text-2xl">
            Únete a cientos de emprendedores que ya están creciendo con nuestros
            sistemas web profesionales.
          </p>
        </div>

        <!-- Stats or Features Grid -->
        <div class="grid grid-cols-1 gap-6 my-12 md:grid-cols-3">
          <div class="p-6 text-center bg-white/10 backdrop-blur-sm rounded-xl">
            <div class="mb-4">
              <FaClock className="w-12 h-12 mx-auto text-white" />
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">
              Implementación Rápida
            </h3>
            <p class="text-blue-100">
              Tu sistema estará funcionando en menos de 48 horas
            </p>
          </div>

          <div class="p-6 text-center bg-white/10 backdrop-blur-sm rounded-xl">
            <div class="mb-4">
              <FaCheckCircle className="w-12 h-12 mx-auto text-white" />
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">Soporte Incluido</h3>
            <p class="text-blue-100">
              Asistencia técnica y actualizaciones sin costo adicional
            </p>
          </div>

          <div class="p-6 text-center bg-white/10 backdrop-blur-sm rounded-xl">
            <div class="mb-4">
              <FaDollarSign className="w-12 h-12 mx-auto text-white" />
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">
              Precios Accesibles
            </h3>
            <p class="text-blue-100">
              Desde $25/mes, sin compromisos a largo plazo
            </p>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a
            href="https://wa.me/593988949117?text=Hola%20RysthDesign%2C%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20sus%20sistemas%20web.%20%C2%BFPodr%C3%ADamos%20agendar%20una%20consulta%20gratuita%3F"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-3 px-8 py-4 text-lg font-bold text-blue-600 transition-all duration-300 bg-white shadow-xl btn hover:bg-blue-50 hover:scale-105"
          >
            <FaWhatsapp className="text-xl" />
            Consulta Gratuita por WhatsApp
          </a>

          <a
            href="https://micropets-demo.rysthdesign.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 text-lg font-bold text-white transition-all duration-300 bg-transparent border-2 border-white btn hover:bg-white hover:text-blue-600"
          >
            Ver Demo MicroPets
          </a>
        </div>

        <!-- Trust Signal -->
        <div class="pt-8 border-t border-white/20">
          <p class="text-blue-100">
            <span class="font-semibold">+10 proyectos web</span> entregados con éxito
          </p>
        </div>
      </div>
    </article>
  </section>
</Layout>
