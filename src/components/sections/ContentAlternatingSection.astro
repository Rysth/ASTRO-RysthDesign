---
import {
  FaCheckCircle,
  FaShieldAlt,
  FaChartLine,
  FaCode,
  FaMobileAlt,
  FaRocket,
  FaBox,
  FaDatabase,
} from "react-icons/fa";
import { Image } from "astro:assets";
import Project_1 from "@/assets/images/projects/project_1.png";
import Project_2 from "@/assets/images/projects/project_2.png";
---

<!-- Content Alternating Sections - Web Development Services -->
<div class="relative bg-gradient-to-br from-[#0a0a0a] via-[#100f1e] to-[#1a1a2e]">
  <!-- Section 1: Image Left, Content Right -->
  <section class="relative px-4 py-16 overflow-hidden md:py-20">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute rounded-full top-20 left-10 w-96 h-96 bg-blue-500/20 blur-3xl"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-screen-xl mx-auto">
      <div
        class="grid items-center gap-8 md:gap-12 md:grid-cols-2 lg:gap-16"
      >
        <!-- Image/Mockup Left -->
        <div class="relative order-2 md:order-1">
          <div class="relative">
            <!-- Main Image with Shadow -->
            <div
              class="relative overflow-hidden shadow-2xl rounded-2xl shadow-blue-900/20"
            >
              <Image
                src={Project_1}
                alt="QuickInventory - Sistema de Gestión"
                class="object-cover w-full h-auto transition-transform duration-500 hover:scale-105"
              />
            </div>

            <!-- Floating Card 1 -->
            <div
              class="absolute -right-4 top-8 md:-right-8 bg-gradient-to-br from-[#1a1a2e]/95 to-[#2d2d44]/95 backdrop-blur-xl border border-blue-500/30 rounded-xl p-4 shadow-lg animate-float hidden md:block max-w-[200px]"
            >
              <div class="flex items-center gap-3 mb-2">
                <div
                  class="flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-r from-blue-500/20 to-purple-600/20"
                >
                  <FaChartLine className="text-blue-400 text-sm" />
                </div>
                <div>
                  <div class="text-xs font-semibold text-white">
                    Eficiencia +35%
                  </div>
                  <div class="text-xs text-gray-400">Tras implementar</div>
                </div>
              </div>
            </div>

            <!-- Floating Card 2 -->
            <div
              class="absolute -left-4 bottom-8 md:-left-8 bg-gradient-to-br from-[#1a1a2e]/95 to-[#2d2d44]/95 backdrop-blur-xl border border-green-500/30 rounded-xl p-4 shadow-lg animate-float hidden md:block max-w-[180px]"
              style="animation-delay: 1s;"
            >
              <div class="flex items-center gap-3">
                <div
                  class="flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-r from-green-500/20 to-emerald-600/20"
                >
                  <FaShieldAlt className="text-green-400 text-sm" />
                </div>
                <div>
                  <div class="text-xs font-semibold text-white">
                    100% Seguro
                  </div>
                  <div class="text-xs text-gray-400">Datos protegidos</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Content Right -->
        <div class="order-1 space-y-6 md:order-2">
          <div
            class="flex items-center gap-2 text-[#a78bfa] font-jetbrains text-sm uppercase tracking-wider"
          >
            <div class="w-2 h-2 bg-[#a78bfa] rounded-full animate-pulse"></div>
            <span>Sistemas de Gestión</span>
          </div>

          <h2 class="text-3xl font-black leading-tight text-white md:text-4xl lg:text-5xl">
            Controla eficientemente tu
            <span
              class="bg-gradient-to-r from-[#a78bfa] to-[#4361ee] bg-clip-text text-transparent"
            >
              inventario y operaciones
            </span>
          </h2>

          <p class="text-base leading-relaxed text-gray-300 md:text-lg">
            Desarrollamos sistemas personalizados de gestión que te permiten
            controlar inventario, procesar ventas, gestionar proveedores y generar
            reportes en tiempo real para tomar mejores decisiones de negocio.
          </p>

          <!-- Features List -->
          <div class="space-y-4">
            <!-- Feature 1 -->
            <div class="flex items-start gap-4">
              <div
                class="flex items-center justify-center flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-r from-[#a78bfa]/20 to-[#4361ee]/20 border border-[#a78bfa]/30"
              >
                <FaBox className="text-[#a78bfa] text-lg" />
              </div>
              <div>
                <h4 class="mb-1 text-lg font-bold text-white">
                  Control de Inventario en Tiempo Real
                </h4>
                <p class="text-sm text-gray-400">
                  Monitorea tu stock en tiempo real, recibe alertas de productos
                  con bajo inventario y gestiona tus compras de manera eficiente
                  para evitar pérdidas.
                </p>
              </div>
            </div>

            <!-- Feature 2 -->
            <div class="flex items-start gap-4">
              <div
                class="flex items-center justify-center flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-r from-[#4361ee]/20 to-[#6366f1]/20 border border-[#4361ee]/30"
              >
                <FaChartLine className="text-[#4361ee] text-lg" />
              </div>
              <div>
                <h4 class="mb-1 text-lg font-bold text-white">
                  Reportes y Analytics Detallados
                </h4>
                <p class="text-sm text-gray-400">
                  Genera reportes de ventas, inventario y proveedores con gráficos
                  intuitivos que te ayudan a visualizar el rendimiento de tu
                  negocio y tomar decisiones informadas.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: Content Left, Image Right (Reversed) -->
  <section class="relative px-4 py-16 overflow-hidden md:py-20">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute rounded-full bottom-20 right-10 w-96 h-96 bg-purple-500/20 blur-3xl"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-screen-xl mx-auto">
      <div
        class="grid items-center gap-8 md:gap-12 md:grid-cols-2 lg:gap-16"
      >
        <!-- Content Left -->
        <div class="space-y-6">
          <div
            class="flex items-center gap-2 text-[#4361ee] font-jetbrains text-sm uppercase tracking-wider"
          >
            <div class="w-2 h-2 bg-[#4361ee] rounded-full animate-pulse"></div>
            <span>Desarrollo Web Personalizado</span>
          </div>

          <h2 class="text-3xl font-black leading-tight text-white md:text-4xl lg:text-5xl">
            Sitios web y
            <span
              class="bg-gradient-to-r from-[#4361ee] to-[#6366f1] bg-clip-text text-transparent"
            >
              catálogos digitales
            </span>
            profesionales
          </h2>

          <p class="text-base leading-relaxed text-gray-300 md:text-lg">
            Creamos sitios web modernos, landing pages optimizadas y catálogos
            digitales que convierten visitantes en clientes. Diseño responsivo,
            rápido y optimizado para SEO en todos nuestros proyectos.
          </p>

          <!-- Features List -->
          <div class="space-y-4">
            <!-- Feature 1 -->
            <div
              class="flex items-start gap-4 p-4 border bg-gradient-to-br from-[#1a1a2e]/60 to-[#2d2d44]/60 backdrop-blur-sm border-[#4361ee]/20 rounded-xl"
            >
              <div
                class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-r from-[#4361ee]/20 to-[#6366f1]/20"
              >
                <FaMobileAlt className="text-[#4361ee] text-lg" />
              </div>
              <div>
                <h4 class="mb-1 font-bold text-white">
                  Diseño Responsivo y Moderno
                </h4>
                <p class="text-sm text-gray-400">
                  Todos nuestros sitios web se adaptan perfectamente a cualquier
                  dispositivo: móvil, tablet o desktop, garantizando la mejor
                  experiencia de usuario.
                </p>
              </div>
            </div>

            <!-- Feature 2 -->
            <div
              class="flex items-start gap-4 p-4 border bg-gradient-to-br from-[#1a1a2e]/60 to-[#2d2d44]/60 backdrop-blur-sm border-[#6366f1]/20 rounded-xl"
            >
              <div
                class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-r from-[#6366f1]/20 to-[#8b5cf6]/20"
              >
                <FaRocket className="text-[#6366f1] text-lg" />
              </div>
              <div>
                <h4 class="mb-1 font-bold text-white">
                  Optimizado para Conversión
                </h4>
                <p class="text-sm text-gray-400">
                  Diseñamos cada elemento pensando en convertir visitantes en
                  clientes, con llamados a la acción estratégicos y experiencia de
                  usuario optimizada.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Image/Mockup Right -->
        <div class="relative">
          <div class="relative">
            <!-- Main Image with Shadow -->
            <div
              class="relative overflow-hidden shadow-2xl rounded-2xl shadow-purple-900/20"
            >
              <Image
                src={Project_2}
                alt="TrámitesEC - Plataforma Web"
                class="object-cover w-full h-auto transition-transform duration-500 hover:scale-105"
              />
            </div>

            <!-- Floating Card 3 -->
            <div
              class="absolute -left-4 top-8 md:-left-8 bg-gradient-to-br from-[#1a1a2e]/95 to-[#2d2d44]/95 backdrop-blur-xl border border-purple-500/30 rounded-xl p-4 shadow-lg animate-float hidden md:block max-w-[180px]"
              style="animation-delay: 0.5s;"
            >
              <div class="flex items-center gap-3">
                <div
                  class="flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-r from-purple-500/20 to-pink-600/20"
                >
                  <FaCheckCircle className="text-purple-400 text-sm" />
                </div>
                <div>
                  <div class="text-xs font-semibold text-white">
                    SEO Optimizado
                  </div>
                  <div class="text-xs text-gray-400">Google Ready</div>
                </div>
              </div>
            </div>

            <!-- Floating Card 4 -->
            <div
              class="absolute -right-4 bottom-8 md:-right-8 bg-gradient-to-br from-[#1a1a2e]/95 to-[#2d2d44]/95 backdrop-blur-xl border border-blue-500/30 rounded-xl p-4 shadow-lg animate-float hidden md:block max-w-[200px]"
              style="animation-delay: 1.5s;"
            >
              <div class="mb-2 text-xs font-semibold text-white">
                Tiempo de Carga
              </div>
              <div class="text-2xl font-black text-transparent bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text">
                &lt; 2 seg
              </div>
              <div class="flex items-center gap-1 mt-1">
                <span class="text-xs text-green-400">⚡ Ultra Rápido</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
