// No imports needed for this component
---

<!-- Floating Buttons Container -->
<div class="fixed z-40 flex flex-col gap-4 bottom-6 right-6">
  <!-- WhatsApp Floating Button - Solo móvil -->
  <a
    href="https://wa.me/593988949117?text=Hola%20RysthDesign%2C%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20sus%20servicios%20de%20desarrollo%20web.%20%C2%BFPodr%C3%ADan%20proporcionarme%20informaci%C3%B3n%20sobre%20precios%20y%20tiempos%20de%20entrega%3F"
    target="_blank"
    rel="noopener noreferrer"
    id="whatsappFloating"
    class="md:hidden flex items-center justify-center w-14 h-14 bg-gradient-to-r from-[#25D366] to-[#128C7E] rounded-full shadow-lg hover:shadow-xl hover:shadow-green-500/25 transition-all duration-300 transform hover:scale-110 border-2 border-green-500/20"
    aria-label="Contactar por WhatsApp"
  >
    <svg class="text-white w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
      <path
        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.687"
      ></path>
    </svg>
  </a>

  <!-- Scroll to Top Button -->
  <button
    id="scrollToTop"
    class="hidden flex items-center justify-center w-12 h-12 bg-gradient-to-r from-[#a78bfa] to-[#4361ee] rounded-full shadow-lg hover:shadow-xl hover:shadow-purple-500/25 transition-all duration-300 transform hover:scale-110 border-2 border-purple-500/20"
    aria-label="Volver arriba"
  >
    <svg
      class="w-6 h-6 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 15l7-7 7 7"></path>
    </svg>
  </button>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const scrollToTopBtn = document.getElementById("scrollToTop");
    const whatsappBtn = document.getElementById("whatsappFloating");

    // Mostrar/ocultar botón de scroll to top
    function toggleScrollButton() {
      if (window.pageYOffset > 300) {
        scrollToTopBtn?.classList.remove("hidden");
        scrollToTopBtn?.classList.add("flex");
      } else {
        scrollToTopBtn?.classList.add("hidden");
        scrollToTopBtn?.classList.remove("flex");
      }
    }

    // Mostrar/ocultar botón de WhatsApp según el scroll
    function toggleWhatsAppButton() {
      if (window.pageYOffset > 200) {
        whatsappBtn?.classList.remove("opacity-0", "scale-0");
        whatsappBtn?.classList.add("opacity-100", "scale-100");
      } else {
        whatsappBtn?.classList.remove("opacity-100", "scale-100");
        whatsappBtn?.classList.add("opacity-0", "scale-0");
      }
    }

    // Función de scroll suave al top
    function scrollToTop() {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    }

    // Event listeners
    window.addEventListener("scroll", function () {
      toggleScrollButton();
      toggleWhatsAppButton();
    });

    scrollToTopBtn?.addEventListener("click", scrollToTop);

    // Inicializar estado de botones
    toggleScrollButton();
    toggleWhatsAppButton();

    // Animación de entrada para WhatsApp button
    if (whatsappBtn) {
      whatsappBtn.classList.add(
        "opacity-0",
        "scale-0",
        "transition-all",
        "duration-300",
      );
    }
  });
</script>

<style>
  /* Animaciones personalizadas para los botones flotantes */
  #scrollToTop {
    animation: fadeInUp 0.3s ease-out;
  }

  #whatsappFloating {
    animation: pulse 2s infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.4);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(37, 211, 102, 0);
    }
  }

  /* Hover effects */
  #scrollToTop:hover {
    transform: translateY(-2px) scale(1.1);
  }

  #whatsappFloating:hover {
    transform: translateY(-2px) scale(1.1);
    animation-play-state: paused;
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .fixed.bottom-6.right-6 {
      bottom: 1rem;
      right: 1rem;
    }

    #whatsappFloating {
      width: 3rem;
      height: 3rem;
    }

    #whatsappFloating svg {
      width: 1.5rem;
      height: 1.5rem;
    }

    #scrollToTop {
      width: 2.75rem;
      height: 2.75rem;
    }

    #scrollToTop svg {
      width: 1.25rem;
      height: 1.25rem;
    }
  }
</style>
