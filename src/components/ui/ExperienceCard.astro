---
const { imageUrl, altText, title, date, description } = Astro.props;
import { Image } from "astro:assets";
---

<div class="space-y-2">
  <header class="flex gap-4">
    <figure class="">
      <Image
        src={imageUrl}
        alt={altText}
        class="object-contain h-full mx-auto transition max-w-20"
      />
    </figure>
    <div
      class="items-center w-full space-y-2 md:flex md:justify-between md:space-y-0"
    >
      <h3
        class="text-lg font-semibold leading-tight text-neutral-900 md:text-lg"
      >
        {title}
      </h3>
      <p class="text-sm text-gray-500">{date}</p>
    </div>
  </header>
  <main>
    <p class="text-xs text-justify text-gray-600 md:text-sm">
      {description}
    </p>
  </main>
</div>
