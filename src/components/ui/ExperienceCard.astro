---
const { imageUrl, altText, title, date, description } = Astro.props;
import { Image } from "astro:assets";
---

<div class="space-y-2">
  <header class="flex gap-2">
    <figure class="">
      <Image
        src={imageUrl}
        alt={altText}
        class="object-contain w-24 h-full mx-auto transition"
      />
    </figure>
    <div class="items-center w-full md:flex md:justify-between">
      <h3 class="text-xl font-semibold text-white">
        {title}
      </h3>
      <p class="text-sm text-gray-400">{date}</p>
    </div>
  </header>
  <main>
    <p class="text-xs text-justify text-gray-400 md:text-sm">
      {description}
    </p>
  </main>
</div>
