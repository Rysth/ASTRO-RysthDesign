---
// Props para el componente ProjectCard
const {
  imageUrl,
  projectUrl,
  altText,
  title,
  topic,
  description,
  technologies,
  fullSize,
} = Astro.props;
import { Image } from "astro:assets";
---

<a
  href={projectUrl}
  target="_blank"
  rel="noreferrer"
  class={`block transition duration-300 rounded-2xl group bg-[var(--CL-secondary)] hover:shadow-indigo-900/50 hover:shadow-2xl ${
    fullSize ? "md:col-span-2" : ""
  }`}
>
  <figure class="overflow-hidden rounded-t-2xl">
    <Image
      src={imageUrl}
      alt={altText}
      class={`object-cover w-full h-full mx-auto transition  rounded-t-2xl group-hover:grayscale group-hover:scale-105 ${
        fullSize ? "max-h-[35rem]" : "h-72"
      }`}
    />
  </figure>
  <main class="p-2 px-4 pb-6 mt-2">
    <h3 class="text-xl font-semibold text-white">{title}</h3>
    <p class="mt-1 text-xs text-gray-400">{topic}</p>
    <p class="my-2 text-xs md:text-sm">
      {description}
    </p>
    <ul class="flex gap-1 mt-4 text-sm">
      {
        technologies.map((tech) => (
          <li class={`text-white badge badge-sm ${tech.color}`}>{tech.name}</li>
        ))
      }
    </ul>
  </main>
</a>
