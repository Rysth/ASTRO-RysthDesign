---
import { Image } from "astro:assets";
import { FaArrowRight } from "react-icons/fa";
import BrandImage from "../../assets/images/brand/brand.svg";
---

<nav
  class="sticky top-0 z-50 w-full py-4 transition-all duration-300 backdrop-blur-md"
  id="navbar"
>
  <div class="max-w-screen-xl px-4 mx-auto">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <Image src={BrandImage} alt="RysthDesign Logo" class="w-auto h-10" />
      </a>

      <!-- Desktop Navigation -->
      <div
        class="items-center hidden p-2 space-x-1 border rounded-full lg:flex"
      >
        <ul class="flex items-center gap-2">
          <li>
            <a
              href="/servicios"
              class="text-sm transition-all rounded-full text-slate-100 btn-sm btn btn-ghost hover:bg-slate-800"
              >Servicios</a
            >
          </li>
          <li>
            <a
              href="/micro"
              class="text-sm transition-all rounded-full text-slate-100 btn-sm btn btn-ghost hover:bg-slate-800"
              >Serie Micro</a
            >
          </li>
        </ul>
      </div>

      <!-- CTA Button -->
      <a
        href="http://tinyurl.com/contact-ws"
        target="_blank"
        class="hidden lg:flex items-center gap-2 bg-white text-[#050c28] px-6 py-2.5 rounded-full font-medium hover:bg-opacity-90 transition-all"
      >
        Contáctanos
        <FaArrowRight className="text-sm" />
      </a>

      <!-- Mobile menu button -->
      <button
        type="button"
        class="lg:hidden inline-flex items-center rounded-full justify-center btn btn-circle text-white hover:bg-[#1a2346]"
        aria-controls="mobile-menu"
        aria-expanded="false"
        id="toggleButton"
      >
        <span class="sr-only">Abrir menu</span>
        <i class="text-2xl bx bx-menu"></i>
      </button>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state -->
  <div class="hidden lg:hidden" id="mobileMenu">
    <div class="px-4 pt-2 pb-4 bg-[#050c28] border-t border-[#1a2346]">
      <ul class="space-y-2">
        <li>
          <a
            href="/servicios"
            class="block px-3 py-2 text-base font-medium text-white hover:bg-[#1a2346] rounded-md"
            >Servicios</a
          >
        </li>
        <li>
          <a
            href="/micro"
            class="block px-3 py-2 text-base font-medium text-white hover:bg-[#1a2346] rounded-md"
            >Serie Micro</a
          >
        </li>
        <li class="pt-2">
          <a
            href="http://tinyurl.com/contact-ws"
            target="_blank"
            class="flex items-center justify-center gap-2 w-full bg-white text-[#050c28] px-4 py-2.5 rounded-md font-medium"
          >
            Contáctanos
            <FaArrowRight className="text-sm" />
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
