---
import { Image } from "astro:assets";
import { FaHome, FaPhoneAlt } from "react-icons/fa";
import BrandImage from "../../assets/images/brand/brand_dark.png";
import Subtitle from "../heading/Subtitle.astro";
---

<nav
  class="sticky top-0 z-50 w-full p-4 py-0 transition duration-300 bg-white md:py-2 backdrop-blur shadow-black/5"
  id="navbar"
>
  <div class="relative max-w-screen-xl p-0 mx-auto navbar">
    <div class="navbar-start">
      <div class="">
        <button
          type="button"
          class="btn btn-ghost lg:hidden ps-2 pe-2 !shadow-none"
          aria-label="Toggle button menu "
          id="toggleButton"
        >
          <i class="text-2xl bx bx-menu-alt-left text-neutral-900"></i>
        </button>
        <ul
          class="hidden duration-700 absolute left-0 right-0 top-20 lg:hidden z-[1] p-4 shadow-xl bg-white rounded-xl space-y-2 min-w-full transition text-neutral-900"
          id="mobileMenu"
        >
          <li>
            <a class="flex items-center gap-2 text-sm" href="/">
              <i class="text-lg bx bx-home"></i>
              Inicio</a
            >
          </li>
          <!-- Añadido: Serie Micro en móvil -->
          <li>
            <a class="flex items-center gap-2 text-sm" href="/micro">
              <i class="text-lg bx bx-cube"></i>
              Serie Micro</a
            >
          </li>
          <li>
            <a class="flex items-center gap-2 text-sm" href="#proyectos">
              <i class="text-lg bx bx-code-alt"></i>
              Proyectos</a
            >
          </li>
        </ul>
      </div>
      <a class="text-xl" href="/">
        <Image src={BrandImage} alt="RysthDesign Logo" class="w-16 md:w-20" />
      </a>
    </div>
    <div class="hidden navbar-center lg:flex">
      <ul class="flex gap-3 text-neutral-900">
        <li>
          <a
            href="/"
            class="btn btn-sm btn-ghost hover:bg-neutral-600 hover:bg-opacity-20 !shadow-none hover:shadow-xl"
            >Inicio</a
          >
        </li>
        <!-- Añadido: Serie Micro en desktop -->
        <li>
          <a
            href="/micro"
            class="btn btn-sm btn-ghost hover:bg-neutral-600 hover:bg-opacity-20 !shadow-none hover:shadow-xl"
            >Serie Micro</a
          >
        </li>
        <li>
          <a
            href="#proyectos"
            class="!shadow-none btn btn-sm btn-ghost hover:bg-neutral-600 hover:bg-opacity-20 hover:shadow-xl"
            >Proyectos</a
          >
        </li>
      </ul>
    </div>
    <div class="navbar-end">
      <a
        href="http://tinyurl.com/contact-ws"
        target="_blank"
        class="text-xs text-white bg-[#11a748] border border-[#128C7E] hover:bg-[#128C7E] hover:shadow-xl btn lg:text-sm btn-neutral hover:border-transparent hover:shadow-green-900/25 min-h-[40px] max-h-[40px] md:max-h-[40px] md:min-h-[40px]"
      >
        <i class="text-xl bx bxl-whatsapp md:text-2xl"></i>
        Contactar
      </a>
    </div>
  </div>
</nav>

<script>
  const toggleButton = document.querySelector("#toggleButton");
  const mobileMenu = document.querySelector("#mobileMenu");

  toggleButton.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
</script>
