---
import { Image } from "astro:assets";
import BrandImage from "../../assets/images/brand/brand.svg";

// Get current path to handle navigation properly
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === "/";
---

<nav
  class="fixed top-0 left-0 right-0 z-50 border-b shadow-lg bg-[#100f1e]/95 backdrop-blur-md border-gray-700/30"
>
  <div class="max-w-screen-xl px-4 py-1 mx-auto md:px-0">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <Image
            src={BrandImage}
            alt="RysthDesign Logo"
            class="w-auto h-10 transition-transform group-hover:scale-110 drop-shadow-sm"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="flex items-baseline ml-10 space-x-8">
          <a
            href={isHomePage ? "#inicio" : "/#inicio"}
            class="font-jetbrains px-3 py-2 text-sm font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 border-b-2 border-transparent hover:text-[#4361ee] hover:border-[#4361ee] hover:bg-[#4361ee]/10 rounded-t-md"
          >
            Inicio
          </a>
          <a
            href={isHomePage ? "#tecnologias" : "/#tecnologias"}
            class="font-jetbrains px-3 py-2 text-sm font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 border-b-2 border-transparent hover:text-[#4361ee] hover:border-[#4361ee] hover:bg-[#4361ee]/10 rounded-t-md"
          >
            Tecnologías
          </a>

          <!-- Services Dropdown -->
          <div class="relative group">
            <button
              class="font-jetbrains flex items-center gap-1 px-3 py-2 text-sm font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 border-b-2 border-transparent hover:text-[#4361ee] hover:border-[#4361ee] hover:bg-[#4361ee]/10 rounded-t-md"
              id="services-dropdown"
            >
              Servicios
              <svg
                class="w-4 h-4 transition-transform group-hover:rotate-180"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </button>

            <!-- Dropdown Menu -->
            <div
              class="absolute left-0 z-50 invisible mt-2 transition-all duration-300 opacity-0 top-full group-hover:visible group-hover:opacity-100"
            >
              <div
                class="bg-[#1a1a2e]/95 backdrop-blur-md border border-gray-700/50 rounded-xl shadow-xl min-w-[200px] py-2"
              >
                <a
                  href={isHomePage ? "#servicios" : "/#servicios"}
                  class="block px-4 py-3 text-sm text-gray-300 hover:text-[#4361ee] hover:bg-[#4361ee]/10 transition-all duration-300 border-l-4 border-transparent hover:border-l-[#4361ee]"
                >
                  Todos los Servicios
                </a>
              </div>
            </div>
          </div>

          <a
            href={isHomePage ? "#clientes" : "/#clientes"}
            class="font-jetbrains px-3 py-2 text-sm font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 border-b-2 border-transparent hover:text-[#4361ee] hover:border-[#4361ee] hover:bg-[#4361ee]/10 rounded-t-md"
          >
            Clientes
          </a>
          <a
            href={isHomePage ? "#contacto" : "/#contacto"}
            class="font-jetbrains px-3 py-2 text-sm font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 border-b-2 border-transparent hover:text-[#4361ee] hover:border-[#4361ee] hover:bg-[#4361ee]/10 rounded-t-md"
          >
            Contacto
          </a>
        </div>
      </div>

      <!-- WhatsApp Button Desktop -->
      <div class="hidden md:block">
        <a
          href="https://wa.me/593988949117?text=Hola%20RysthDesign%2C%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20sus%20servicios%20de%20desarrollo%20web.%20%C2%BFPodr%C3%ADan%20proporcionarme%20informaci%C3%B3n%3F"
          target="_blank"
          rel="noopener noreferrer"
          class="font-jetbrains bg-gradient-to-r from-[#25D366] to-[#128C7E] hover:from-[#128C7E] hover:to-[#075E54] text-white px-6 py-3 rounded-full text-sm font-bold uppercase tracking-wide transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-green-500/25 transform hover:-translate-y-1 hover:scale-105 border border-green-500/20 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.687"
            ></path>
          </svg>
          Cotizar
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 text-gray-300 transition-all duration-300 rounded-lg bg-[#050505]/50 hover:bg-[#4361ee]/20 hover:text-[#4361ee] focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[#4361ee] backdrop-blur-sm"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobile-menu-button"
        >
          <span class="sr-only">Abrir menú principal</span>
          <!-- Hamburger Icon -->
          <svg
            class="block w-6 h-6 transition-transform duration-300"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="hidden md:hidden" id="mobile-menu">
    <div
      class="px-2 pt-3 pb-4 space-y-2 border-t shadow-xl bg-[#100f1e]/98 border-gray-700/50 backdrop-blur-md"
    >
      <a
        href={isHomePage ? "#inicio" : "/#inicio"}
        class="font-jetbrains block px-4 py-3 text-base font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 rounded-lg hover:text-[#4361ee] hover:bg-gradient-to-r hover:from-[#4361ee]/10 hover:to-[#4361ee]/5 border-l-4 border-transparent hover:border-l-[#4361ee]"
      >
        Inicio
      </a>
      <a
        href={isHomePage ? "#tecnologias" : "/#tecnologias"}
        class="font-jetbrains block px-4 py-3 text-base font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 rounded-lg hover:text-[#4361ee] hover:bg-gradient-to-r hover:from-[#4361ee]/10 hover:to-[#4361ee]/5 border-l-4 border-transparent hover:border-l-[#4361ee]"
      >
        Tecnologías
      </a>

      <!-- Mobile Services Dropdown -->
      <div class="relative">
        <button
          class="font-jetbrains flex items-center justify-between w-full px-4 py-3 text-base font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 rounded-lg hover:text-[#4361ee] hover:bg-gradient-to-r hover:from-[#4361ee]/10 hover:to-[#4361ee]/5 border-l-4 border-transparent hover:border-l-[#4361ee]"
          id="mobile-services-dropdown"
        >
          <span>Servicios</span>
          <svg
            class="w-4 h-4 transition-transform"
            id="mobile-services-icon"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </button>

        <!-- Mobile Dropdown Content -->
        <div class="hidden pl-6 mt-2 space-y-2" id="mobile-services-content">
          <a
            href={isHomePage ? "#servicios" : "/#servicios"}
            class="block px-4 py-2 text-sm text-gray-400 hover:text-[#4361ee] transition-all duration-300"
          >
            Todos los Servicios
          </a>
        </div>
      </div>

      <a
        href={isHomePage ? "#clientes" : "/#clientes"}
        class="font-jetbrains block px-4 py-3 text-base font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 rounded-lg hover:text-[#4361ee] hover:bg-gradient-to-r hover:from-[#4361ee]/10 hover:to-[#4361ee]/5 border-l-4 border-transparent hover:border-l-[#4361ee]"
      >
        Clientes
      </a>
      <a
        href={isHomePage ? "#contacto" : "/#contacto"}
        class="font-jetbrains block px-4 py-3 text-base font-semibold text-gray-300 uppercase tracking-wide transition-all duration-300 rounded-lg hover:text-[#4361ee] hover:bg-gradient-to-r hover:from-[#4361ee]/10 hover:to-[#4361ee]/5 border-l-4 border-transparent hover:border-l-[#4361ee]"
      >
        Contacto
      </a>

      <!-- Mobile WhatsApp CTA -->
      <div class="px-2 pt-4 pb-2">
        <a
          href="https://wa.me/593988949117?text=Hola%20RysthDesign%2C%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20sus%20servicios%20de%20desarrollo%20web.%20%C2%BFPodr%C3%ADan%20proporcionarme%20informaci%C3%B3n%3F"
          target="_blank"
          rel="noopener noreferrer"
          class="font-jetbrains flex items-center justify-center gap-2 px-6 py-3 text-base font-bold text-center text-white uppercase tracking-wide transition-all duration-300 bg-gradient-to-r from-[#25D366] to-[#128C7E] rounded-full hover:from-[#128C7E] hover:to-[#075E54] transform hover:scale-105 shadow-lg"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.687"
            ></path>
          </svg>
          Cotizar
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle functionality
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileServicesDropdown = document.getElementById(
      "mobile-services-dropdown",
    );
    const mobileServicesContent = document.getElementById(
      "mobile-services-content",
    );
    const mobileServicesIcon = document.getElementById("mobile-services-icon");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");

        // Animate hamburger icon
        const icon = mobileMenuButton.querySelector("svg");
        if (icon) {
          icon.classList.toggle("rotate-180");
        }

        // Update aria-expanded attribute
        const expanded =
          mobileMenuButton.getAttribute("aria-expanded") === "true";
        mobileMenuButton.setAttribute("aria-expanded", (!expanded).toString());
      });
    }

    // Mobile Services Dropdown
    if (mobileServicesDropdown && mobileServicesContent && mobileServicesIcon) {
      mobileServicesDropdown.addEventListener("click", function (e) {
        e.preventDefault();
        mobileServicesContent.classList.toggle("hidden");
        mobileServicesIcon.classList.toggle("rotate-180");
      });
    }

    // Close mobile menu when clicking on links
    const mobileLinks = mobileMenu?.querySelectorAll(
      'a[href^="#"], a[href^="/#"], a[href^="/servicios"]',
    );
    mobileLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
        const icon = mobileMenuButton?.querySelector("svg");
        if (icon) {
          icon.classList.remove("rotate-180");
        }
        mobileMenuButton?.setAttribute("aria-expanded", "false");

        // Close services dropdown too
        if (mobileServicesContent) {
          mobileServicesContent.classList.add("hidden");
        }
        if (mobileServicesIcon) {
          mobileServicesIcon.classList.remove("rotate-180");
        }
      });
    });

    // Close mobile menu when clicking outside
    document.addEventListener("click", function (event) {
      if (
        mobileMenu &&
        !mobileMenu.contains(event.target) &&
        !mobileMenuButton?.contains(event.target)
      ) {
        mobileMenu.classList.add("hidden");
        const icon = mobileMenuButton?.querySelector("svg");
        if (icon) {
          icon.classList.remove("rotate-180");
        }
        mobileMenuButton?.setAttribute("aria-expanded", "false");

        // Close services dropdown too
        if (mobileServicesContent) {
          mobileServicesContent.classList.add("hidden");
        }
        if (mobileServicesIcon) {
          mobileServicesIcon.classList.remove("rotate-180");
        }
      }
    });
  });
</script>
